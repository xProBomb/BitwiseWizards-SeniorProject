@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<style>
    
    .data-container {
        background-color: var(--bs-secondary-bg);
        border-radius: 12px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        padding: 2rem;
        margin-bottom: 2rem;
        border: 1px solid var(--bs-border-color);
    }
    
    [data-bs-theme="dark"] .data-container {
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    }
    
    .data-header {
        display: flex;
        align-items: center;
        margin-bottom: 1.5rem;
        border-bottom: 1px solid var(--bs-border-color);
        padding-bottom: 1rem;
    }
    
    .data-icon {
        color: #5D3FD3;
        font-size: 2.2rem;
        margin-right: 1rem;
    }
    
    .data-content {
        background-color: var(--bs-body-bg);
        border-radius: 8px;
        padding: 1.5rem;
        border: 1px solid var(--bs-border-color);
    }
    
    .data-actions {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        margin-top: 1.5rem;
        padding-top: 1.5rem;
        border-top: 1px solid var(--bs-border-color);
    }
    
    .data-card {
        background-color: var(--bs-tertiary-bg);
        border-radius: 8px;
        padding: 1.5rem;
        margin-top: 1.5rem;
        border: 1px solid var(--bs-border-color);
        transition: all 0.2s ease;
    }
    
    .data-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
    }
    
    [data-bs-theme="dark"] .data-card:hover {
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
    }
    
    .info-alert {
        background-color: rgba(13, 110, 253, 0.05);
        border-left: 4px solid #5D3FD3;
        border-radius: 8px;
        padding: 1.25rem;
        margin: 1.5rem 0;
    }
    
    [data-bs-theme="dark"] .info-alert {
        background-color: rgba(108, 77, 186, 0.1);
    }
    
    .danger-alert {
        background-color: rgba(220, 53, 69, 0.1);
        border-left: 4px solid #dc3545;
        border-radius: 8px;
        padding: 1.25rem;
        margin: 1.5rem 0;
    }
    
    [data-bs-theme="dark"] .danger-alert {
        background-color: rgba(220, 53, 69, 0.15);
    }
    
    .card-icon {
        display: block;
        font-size: 2rem;
        margin-bottom: 1rem;
        text-align: center;
    }
    
    .download-icon {
        color: #198754;
    }
    
    .delete-icon {
        color: #dc3545;
    }
    
    .card-title {
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 1rem;
        text-align: center;
    }
    
    .download-btn {
        background-color: #198754;
        border: none;
        color: white;
        padding: 0.75rem;
        font-size: 1rem;
        font-weight: 500;
        border-radius: 6px;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
    }
    
    .download-btn:hover {
        background-color: #147a48;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    
    .delete-btn {
        background-color: #dc3545;
        border: none;
        color: white;
        padding: 0.75rem;
        font-size: 1rem;
        font-weight: 500;
        border-radius: 6px;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
    }
    
    .delete-btn:hover {
        background-color: #c82333;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    
    .btn-icon {
        margin-right: 0.5rem;
    }
</style>

<div class="data-container">
    <div class="data-header">
        <i class="bi bi-file-earmark-lock-fill data-icon"></i>
        <h3 class="mb-0">@ViewData["Title"]</h3>
    </div>
    
    <p class="text-muted mb-4">
        Your privacy and data rights are important to us. This page allows you to 
        download your personal data or permanently delete your account.
    </p>
    
    <div class="data-content">
        <div class="info-alert d-flex">
            <i class="bi bi-info-circle-fill me-3 fs-4"></i>
            <div>
                <p class="mb-0">
                    <strong>What personal data do we store?</strong>
                </p>
                <p class="mb-0">
                    Your account contains information such as your email address, profile details, 
                    security settings, and service usage history. You have the right to access 
                    or delete this information at any time.
                </p>
            </div>
        </div>
        
        <div class="row">
            <div class="col-md-6">
                <div class="data-card">
                    <i class="bi bi-cloud-download card-icon download-icon"></i>
                    <h4 class="card-title">Download Your Data</h4>
                    <p>
                        Export a copy of your personal data in a machine-readable format. 
                        This file contains all information associated with your account.
                    </p>
                    <form id="download-data" asp-page="DownloadPersonalData" method="post">
                        <button class="download-btn" type="submit">
                            <i class="bi bi-file-earmark-arrow-down btn-icon"></i>
                            Download My Data
                        </button>
                    </form>
                </div>
            </div>
            
            <div class="col-md-6">
                <div class="data-card">
                    <i class="bi bi-trash card-icon delete-icon"></i>
                    <h4 class="card-title">Delete Your Account</h4>
                    <p>
                        Permanently remove your account and all associated personal data from our systems.
                        This action cannot be undone.
                    </p>
                    <div class="danger-alert mb-3">
                        <strong>Warning:</strong> Account deletion is permanent and irreversible.
                    </div>
                    <a id="delete" asp-page="DeletePersonalData" class="delete-btn">
                        <i class="bi bi-exclamation-triangle btn-icon"></i>
                        Delete My Account
                    </a>
                </div>
            </div>
        </div>
        
        <div class="info-alert mt-4 d-flex">
            <i class="bi bi-shield-lock me-3 fs-4"></i>
            <div>
                <p class="mb-0">
                    <strong>Data Protection & Privacy</strong>
                </p>
                <p class="mb-0">
                    We are committed to protecting your personal information and respecting your privacy rights.
                    If you have any questions about your data, please contact our support team.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        
        if (!document.querySelector('link[href*="bootstrap-icons"]')) {
            const iconLink = document.createElement('link');
            iconLink.rel = 'stylesheet';
            iconLink.href = 'https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css';
            document.head.appendChild(iconLink);
        }
        
        // Add confirmation dialog to delete button
        document.getElementById('delete').addEventListener('click', function(e) {
            if (!confirm("Are you sure you want to proceed to the account deletion page?")) {
                e.preventDefault();
            }
        });
    </script>
}