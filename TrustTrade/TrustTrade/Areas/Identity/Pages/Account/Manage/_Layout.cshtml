@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout != null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}

<style>
    
    .account-management-container {
        padding: 2rem 0;
    }
    
    .account-header {
        margin-bottom: 2rem;
        position: relative;
    }
    
    .account-title {
        font-size: 1.75rem;
        font-weight: 700;
        color: var(--bs-body-color);
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
    }
    
    .account-title-icon {
        color: #0d6efd;
        margin-right: 0.75rem;
        font-size: 1.75rem;
    }
    
    .account-subtitle {
        font-size: 1rem;
        color: var(--bs-secondary-color);
        margin-bottom: 1.5rem;
        max-width: 600px;
    }
    
    .section-divider {
        height: 1px;
        background: linear-gradient(to right, 
            rgba(var(--bs-secondary-rgb), 0), 
            rgba(var(--bs-secondary-rgb), 0.5), 
            rgba(var(--bs-secondary-rgb), 0));
        margin: 1rem 0 2rem;
        border: none;
    }
    
   
    .content-panel {
        background-color: var(--bs-body-bg);
        border-radius: 12px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        height: 100%;
        transition: all 0.2s ease;
        border: 1px solid var(--bs-border-color);
    }
    
    [data-bs-theme="dark"] .content-panel {
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    }
    
    .content-panel:hover {
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
    }
    
    [data-bs-theme="dark"] .content-panel:hover {
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.25);
    }
    
    
    @@media (max-width: 768px) {
        .account-management-container {
            padding: 1.5rem 0;
        }
        
        .account-header {
            margin-bottom: 1rem;
            text-align: center;
        }
        
        .account-title {
            justify-content: center;
        }
        
        .account-subtitle {
            margin-left: auto;
            margin-right: auto;
        }
        
        .nav-and-content-row {
            flex-direction: column-reverse;
        }
        
        .content-col {
            margin-bottom: 1.5rem;
        }
    }
    
    
    .security-context {
        position: absolute;
        top: 0;
        right: 0;
        display: flex;
        align-items: center;
        background-color: var(--bs-secondary-bg);
        padding: 0.5rem 1rem;
        border-radius: 2rem;
        font-size: 0.875rem;
        color: var(--bs-body-color);
        border: 1px solid var(--bs-border-color);
    }
    
    .security-context-icon {
        color: #198754;
        margin-right: 0.5rem;
    }
    
    [data-bs-theme="dark"] .security-context-icon {
        color: #25c274;
    }
    
    @@media (max-width: 768px) {
        .security-context {
            position: relative;
            margin: 1rem auto;
            width: fit-content;
        }
    }
</style>

<div class="container account-management-container">
    <div class="account-header">
        <h1 class="account-title">
            <i class="bi bi-person-badge-fill account-title-icon"></i>
            Account Management
        </h1>
        <p class="account-subtitle">
            Review and update your account settings, security preferences, and personal information.
        </p>
        <div class="security-context">
            <i class="bi bi-shield-check security-context-icon"></i>
            Secure Connection
        </div>
        <hr class="section-divider">
    </div>

    <div class="row nav-and-content-row">
        <div class="col-md-3 mb-4">
            <partial name="_ManageNav" />
        </div>
        <div class="col-md-9 content-col">
            <div class="content-panel p-4">
                @RenderBody()
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        
        if (!document.querySelector('link[href*="bootstrap-icons"]')) {
            const iconLink = document.createElement('link');
            iconLink.rel = 'stylesheet';
            iconLink.href = 'https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css';
            document.head.appendChild(iconLink);
        }
    </script>
    @RenderSection("Scripts", required: false)
}