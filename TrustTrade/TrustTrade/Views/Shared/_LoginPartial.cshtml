@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <li class="dropdown-item">
        <a class="dropdown-item" asp-controller="Profile" asp-action="MyProfile">Profile</a>
    </li>
    <li class="dropdown-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="dropdown-item btn btn-link">Logout</button>
        </form>
    </li>
}
else
{
    <li class="dropdown-item">
        <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="dropdown-item">
        <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}

